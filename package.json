{
  "name": "preact-islands",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "npm run build:server; npm run build:web",
    "build:server": "cross-env NODE_ENV=production npx webpack -c webpack.config.server.js",
    "build:web": "cross-env NODE_ENV=production npx webpack -c webpack.config.client.js",
    "dev": "npm run dev:server; npm run dev:web; concurrently 'npm:dev:* -- --watch'",
    "dev:nodemon": "nodemon --watch src --watch dist --ext js 'dist/server.js'",
    "dev:server": "webpack --config webpack.config.server.js",
    "dev:web": "webpack --config webpack.config.client.js",
    "fix": "prettier --write ."
  },
  "prettier": "@barelyhuman/prettier-config",
  "dependencies": {
    "express": "^4.18.2",
    "goober": "^2.1.12",
    "preact": "^10.12.1",
    "preact-render-to-string": "^5.2.6"
  },
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@babel/plugin-transform-react-jsx": "^7.20.13",
    "@barelyhuman/prettier-config": "^1.1.0",
    "acorn": "^8.8.2",
    "acorn-jsx": "^5.3.2",
    "babel-loader": "^9.1.2",
    "concurrently": "^7.6.0",
    "copy-webpack-plugin": "^11.0.0",
    "cross-env": "^7.0.3",
    "escodegen": "^2.0.0",
    "glob": "^8.1.0",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.4",
    "putout": "^28.16.0",
    "rimraf": "^4.1.2",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
    "webpack-manifest-plugin": "^5.0.0",
    "webpack-node-externals": "^3.0.0"
  }
}
